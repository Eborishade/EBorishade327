#  ASSUMPTIONS ::
#   1. the convenience files [../]../common.h and [../]../common.c
#      are present
#   2. the clang/LLVM compiler is installed
#   3. the indent(1L) utility is installed
#
#   WARNING! Do NOT start a source filename with 'core' !
#       (will get Erased when 'make clean' is performed).
#----------------------------------------------------------------------
## Pl check and keep or remove <foo>_dbg_[asan|ub|msan] targets
## as desired.
ALL :=  mt_primes1 mt_primes1_dbg \
        mt_primes2 mt_primes2_dbg

CC=${CROSS_COMPILE}gcc
CL=${CROSS_COMPILE}clang

CFLAGS=-O2 -Wall -UDEBUG -pthread
CFLAGS_DBG=-g -ggdb -gdwarf-4 -O0 -Wall -Wextra -DDEBUG -pthread
CFLAGS_DBG_ASAN=${CFLAGS_DBG} -fsanitize=address
CFLAGS_DBG_MSAN=${CFLAGS_DBG} -fsanitize=memory
CFLAGS_DBG_UB=${CFLAGS_DBG} -fsanitize=undefined

LINKIN := -pthread
 # user will need to explicitly set libraries to link in as required;
 # f.e. -lrt -pthread

all: ${ALL}
CB_FILES := *.[ch]

common.o: ../../common.c ../../common.h
	${CC} ${CFLAGS} -c ../../common.c -o common.o
common_dbg.o: ../../common.c ../../common.h
	${CC} ${CFLAGS_DBG} -c ../../common.c -o common_dbg.o

 #--- Sanitizers (use clang): common_dbg_*
common_dbg_asan.o: ../../common.c ../../common.h
	${CL} ${CFLAGS_DBG_ASAN} -c ../../common.c -o common_dbg_asan.o
common_dbg_ub.o: ../../common.c ../../common.h
	${CL} ${CFLAGS_DBG_UB} -c ../../common.c -o common_dbg_ub.o
common_dbg_msan.o: ../../common.c ../../common.h
	${CL} ${CFLAGS_DBG_MSAN} -c ../../common.c -o common_dbg_msan.o

#--- Target :: mt_primes1
mt_primes1.o: mt_primes1.c
	${CC} ${CFLAGS} -c mt_primes1.c -o mt_primes1.o
mt_primes1: common.o mt_primes1.o
	${CC} -o mt_primes1 mt_primes1.o common.o ${LINKIN}

mt_primes1_dbg.o: mt_primes1.c
	${CC} ${CFLAGS_DBG} -c mt_primes1.c -o mt_primes1_dbg.o
mt_primes1_dbg: mt_primes1_dbg.o common_dbg.o
	${CC} -o mt_primes1_dbg mt_primes1_dbg.o common_dbg.o ${LINKIN}

 #--- Sanitizers for mt_primes1 :: (use clang): <foo>_dbg_[asan|ub|msan]
mt_primes1_dbg_asan.o: mt_primes1.c
	${CL} ${CFLAGS_DBG_ASAN} -c mt_primes1.c -o mt_primes1_dbg_asan.o
mt_primes1_dbg_asan: mt_primes1_dbg_asan.o common_dbg_asan.o
	${CL} ${CFLAGS_DBG_ASAN} -o mt_primes1_dbg_asan mt_primes1_dbg_asan.o common_dbg_asan.o ${LINKIN}

mt_primes1_dbg_ub.o: mt_primes1.c
	${CL} ${CFLAGS_DBG_UB} -c mt_primes1.c -o mt_primes1_dbg_ub.o
mt_primes1_dbg_ub: mt_primes1_dbg_ub.o common_dbg_ub.o
	${CL} ${CFLAGS_DBG_UB} -o mt_primes1_dbg_ub mt_primes1_dbg_ub.o common_dbg_ub.o ${LINKIN}

mt_primes1_dbg_msan.o: mt_primes1.c
	${CL} ${CFLAGS_DBG_MSAN} -c mt_primes1.c -o mt_primes1_dbg_msan.o
mt_primes1_dbg_msan: mt_primes1_dbg_msan.o common_dbg_msan.o
	${CL} ${CFLAGS_DBG_MSAN} -o mt_primes1_dbg_msan mt_primes1_dbg_msan.o common_dbg_msan.o ${LINKIN}

#--- Target :: mt_primes2
mt_primes2.o: mt_primes2.c
	${CC} ${CFLAGS} -c mt_primes2.c -o mt_primes2.o
mt_primes2: common.o mt_primes2.o
	${CC} -o mt_primes2 mt_primes2.o common.o ${LINKIN}

mt_primes2_dbg.o: mt_primes2.c
	${CC} ${CFLAGS_DBG} -c mt_primes2.c -o mt_primes2_dbg.o
mt_primes2_dbg: mt_primes2_dbg.o common_dbg.o
	${CC} -o mt_primes2_dbg mt_primes2_dbg.o common_dbg.o ${LINKIN}

 #--- Sanitizers for mt_primes2 :: (use clang): <foo>_dbg_[asan|ub|msan]
mt_primes2_dbg_asan.o: mt_primes2.c
	${CL} ${CFLAGS_DBG_ASAN} -c mt_primes2.c -o mt_primes2_dbg_asan.o
mt_primes2_dbg_asan: mt_primes2_dbg_asan.o common_dbg_asan.o
	${CL} ${CFLAGS_DBG_ASAN} -o mt_primes2_dbg_asan mt_primes2_dbg_asan.o common_dbg_asan.o ${LINKIN}

mt_primes2_dbg_ub.o: mt_primes2.c
	${CL} ${CFLAGS_DBG_UB} -c mt_primes2.c -o mt_primes2_dbg_ub.o
mt_primes2_dbg_ub: mt_primes2_dbg_ub.o common_dbg_ub.o
	${CL} ${CFLAGS_DBG_UB} -o mt_primes2_dbg_ub mt_primes2_dbg_ub.o common_dbg_ub.o ${LINKIN}

mt_primes2_dbg_msan.o: mt_primes2.c
	${CL} ${CFLAGS_DBG_MSAN} -c mt_primes2.c -o mt_primes2_dbg_msan.o
mt_primes2_dbg_msan: mt_primes2_dbg_msan.o common_dbg_msan.o
	${CL} ${CFLAGS_DBG_MSAN} -o mt_primes2_dbg_msan mt_primes2_dbg_msan.o common_dbg_msan.o ${LINKIN}


# indent- "beautifies" C code into the "Linux kernel style".
# (cb = C Beautifier :) )
# Note! original source file(s) is overwritten, so we back it up.
cb: ${CB_FILES}
	mkdir bkp 2> /dev/null; cp -f ${CB_FILES} bkp/
	indent -linux ${CB_FILES}

clean:
	rm -vf ${ALL} core* vgcore* *.o *~
